<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Carlaware Planning
    =================
    1) Planning
-->
<launch>
    <!-- Essential parameters -->
    <arg name="map_path" default="$(env CWR_MAP_PATH)" description="point cloud and lanelet2 map directory path"/>
    <arg name="vehicle_model" default="$(env CWR_VEHICLE_MODEL)" description="vehicle model name"/>
    <arg name="sensor_model" default="$(env CWR_SENSOR_MODEL)" description="sensor model name"/>
    <arg name="data_path" default="$(env CWR_DATA_PATH)" description="packages data and artifacts directory path" />
    <arg name="pointcloud_container_name" default="pointcloud_container"/>

    <!-- Optional parameters -->
    <!-- Modules to be launched -->
    <arg name="launch_planning" default="true" description="launch planning"/>
    <!-- launch module preset -->
    <arg name="planning_module_preset" default="default" description="planning module preset"/>
    <!-- Auto mode setting-->
    <arg name="enable_all_modules_auto_mode" default="$(env CWR_ENABLE_AUTO_MODE)" description="enable all module's auto mode"/>
    <arg name="is_simulation" default="$(env CWR_SIMULATION)" description="Autoware's behavior will change depending on whether this is a simulation or not."/>

    <!-- Planning -->
    <group if="$(var launch_planning)">
        <include file="$(find-pkg-share autoware_launch)/launch/components/tier4_planning_component.launch.xml">
            <arg name="module_preset" value="$(var planning_module_preset)"/>
            <arg name="enable_all_modules_auto_mode" value="$(var enable_all_modules_auto_mode)"/>
            <arg name="is_simulation" value="$(var is_simulation)"/>
        </include>
    </group>
</launch>
